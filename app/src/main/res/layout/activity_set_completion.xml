<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tg.lax.SetCompletionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Complete!"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:id="@+id/completedQuestionsText"
        android:paddingBottom="64dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/completedQuestionsText"
        android:text="Return to Category Select"
        android:textColor="@color/textGray"
        android:textSize="16dp"
        android:id="@+id/mainMenuButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainMenuButton"
        android:text="Try this set again"
        android:textColor="@color/textGray"
        android:textSize="16dp"
        android:id="@+id/retrySetButton"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retrySetButton"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:text="Share!"
        android:textSize="16dp" />

</RelativeLayout>
